{
	"$schema": "https://unpkg.com/knip@5/schema.json",
	"workspaces": {
		"apps/api": {
			"project": ["src/**/*.ts", "tests/**/*.ts", "!src/**/*.d.ts"]
		},
		"apps/auth": {
			"entry": ["src/main.tsx"],
			"project": ["src/**/*.{ts,tsx}"]
		},
		"apps/dashboard": {
			"entry": ["src/main.tsx"],
			"project": ["src/**/*.{ts,tsx}"]
		},
		"apps/marketing": {
			"entry": ["src/app/**/*.{ts,tsx}"],
			"project": ["src/**/*.{ts,tsx}"]
		}
	},
	"ignore": [
		"supabase/migrations/**",
		"docs/**",
		"**/dist/**",
		"**/node_modules/**",
		"commitlint.config.js"
	],
	"ignoreDependencies": ["husky", "@biomejs/biome", "tailwindcss", "postcss"],
	"ignoreExportsUsedInFile": true,
	"ignoreBinaries": ["xrelease", "godeploy"]
}

{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noUnknownAtRules": "off"
			},
			"correctness": {
				"useUniqueElementIds": "warn"
			},
			"a11y": {
				"noSvgWithoutTitle": "warn"
			}
		}
	},
	"files": {
		"ignoreUnknown": false,
		"maxSize": 5242880
	}
}
